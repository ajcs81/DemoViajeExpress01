
@{
    ViewData["Title"] = "Vehiculos";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="col-sm-12">
    <!-- Customer overview start -->
    <div class="card ">
        <div class="card-header">
            <button class="btn btn-round waves-light btn-primary" id="crear_vehiculo">
                <i class="fa fa-plus-square"></i>
                Nuevo Vehiculo
            </button>

        </div>
        <div class="card-block">
            <div class="form-group row">
                <div class="col-sm-1">
                    <select id="limit" name="limit" class="limitar">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                    </select>
                </div>

                <div class="col">
                    <input type="text" class="colplaca form-control" placeholder="Placa">
                </div>
                <div class="col">
                    <input type="text" class="colmatricula form-control" placeholder="Matricula">
                </div>
                <div class="col">
                    <input type="text" class="colestado form-control" placeholder="Estado">
                </div>
                <div class="col">
                    <select id="sactivo" name="sactivo" class="colactivo form-control">
                        <option value="1">Activo</option>
                        <option value="0">Desactivo</option>
                    </select>
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div class="table-responsive dt-responsive">
                <table class="table table-striped table-bordered nowrap" id="tblVehiculo">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Placa</th>
                            <th>Matricula</th>
                            <th>Estado Vehiculo</th>
                            <th>Activo</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>



    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" id="modalbody">

                <!-- Modal -->
                <div class="modal-header">
                    <h4 class="modal-title">Nuevo Vehiculo</h4>
                    <button type="button" class="close"
                            data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <span id="form_result"></span>
                    <form id="formulario_vehiculo" method="post">

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">
                                Placa
                            </label>
                            <div class="col-md-8">
                                <input type="text" id="placa" name="placa" class="form-control required">
                                <label class="error" style="color:red" for="placa" id="placa_error">La placa es requerida.</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">
                                Matricula
                            </label>
                            <div class="col-md-8">
                                <input type="text" id="matricula" name="matricula" class="form-control required">
                                <label class="error" style="color:red" for="matricula" id="matricula_error">La matricula es requerida.</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">
                                Color
                            </label>
                            <div class="col-md-8">
                                <input type="text" id="color" name="color" class="form-control required">
                                <label class="error" style="color:red" for="color" id="color_error">El color es requerido.</label>
                            </div>
                        </div>
                        <div class="form-group row" id="act">
                            <label class="col-sm-4 col-form-label">
                                Activo
                            </label>
                            <div class="col-md-8">
                                <input type="checkbox" id="activo" name="activo" class="js-info" checked />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="hidden" name="action" id="action" value="Add" />
                            <input type="hidden" name="hidden_id" id="hidden_id" />
                            <button type="button" class="btn btn-default waves-effect "
                                    data-dismiss="modal">
                                Cancelar
                            </button>
                            <button type="submit" name="action_button" id="action_button" class="btn btn-primary waves-effect waves-light "
                                    value="Add">
                                <i class="fa fa-save"></i> Guardar
                            </button>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>



</div>






@section Scripts{

    <script type="module" src="~/assets/js/expressJS/vehiculos.js"></script>

}
